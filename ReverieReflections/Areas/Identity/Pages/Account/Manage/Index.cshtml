@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Ad" class="form-control" placeholder="Please enter your Name" />
                <label asp-for="Input.Ad" class="form-label"></label>
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Soyad" class="form-control" placeholder="Please enter your Surname." />
                <label asp-for="Input.Soyad" class="form-label"></label>
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Input.Aciklama" class="form-control" placeholder="Please enter your description." ></textarea>
                <label asp-for="Input.Aciklama" class="form-label"></label>
                <span asp-validation-for="Input.Aciklama" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="file" asp-for="Input.Image" class="form-control" placeholder="Please enter your Image." />
                <label asp-for="Input.Image" class="form-label"></label>
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
     
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
