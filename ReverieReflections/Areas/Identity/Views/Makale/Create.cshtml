@using ReverieReflections.Areas.Models;
@model NewPostViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MakaleAdi" class="control-label"></label>
                <input asp-for="MakaleAdi" class="form-control" />
                <span asp-validation-for="MakaleAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea id="summernote" asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        // Summernote
        $('#summernote').summernote({ height: 200 });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}